        <font>
            <Font name="Segoe UI Light" size="16.0" />
        </font>
    </Label>
    <TextField fx:id="usernameTextField" layoutX="142.0" layoutY="142.0" prefHeight="30.0" prefWidth="279.0" promptText="Username">
        <font>
            <Font name="Segoe UI Light" size="14.0" />
